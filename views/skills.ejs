<%- include("includes/header.ejs", {title:"Current Skills"}); %>

  <div class='container'>
      <div class='table-responsive'>
          <h3> Skills </h3>
          <table class='table table-bordered table-hover'>
            <thead>
              <tr class='active'>
                  <td>skill_id</td>
                  <td>skill_name</td>
                  <td>description</td>

              </tr>
            </thead>
            <tbody>
              <% skills.forEach((res) => { %>
                 <tr class='active'>
                     <td><%= res.skill_id %></td>
                     <td><%= res.skill_name %></td>
                     <td><%= res.description %></td>
                 </tr>
              <% }); %>
            </tbody>
          </table>
      </div>
  </div>

<div class='container'>
    <div class='jumbotron'>
        <h1>Insert</h1>
        <form action='/skills/insert' method='POST'>
            <div class='form-group'>
                <label> skill_name </label>
                <input type='text' name='skill[skill_name]' class='form-control' placeholder='skill_name'>
            </div>
            <div class='form-group'>
                <label> description</label>
                <input type='text' name='skill[description]' class='form-control' placeholder='description'>
            </div>
            <button type='submit' class='btn btn-primary center-block'>Submit</button>
        </form>
    </div>
</div>

<div class='container'>
    <div class='jumbotron'>
        <h1>Update</h1>
        <form action='/skills/insert/item' method='POST'>
            <div class='form-group'>
                <label> skill_name </label>
                <input type='text' name='skill[skill_name]' class='form-control' placeholder='skill_name'>
            </div>
            <div class='form-group'>
                <label> skill id</label>
                <input type='text' name='skill[skill_id]' class='form-control' placeholder='skill_id'>
            </div>
            <button type='submit' class='btn btn-primary center-block'>Submit</button>
        </form>
    </div>
</div>

<%- include("includes/footer.ejs"); %>